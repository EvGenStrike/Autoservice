<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#474747"
    android:id="@+id/fragment_report"
    android:paddingStart="@dimen/padding_profile_fragment"
    android:paddingEnd="@dimen/padding_profile_fragment"
    android:paddingTop="@dimen/padding_profile_fragment"
    android:paddingBottom="@dimen/padding_profile_fragment"
    >

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/report_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            app:cardBackgroundColor="#FFF388"
            app:cardCornerRadius="10dp"
            app:strokeColor="#FFF388"
            app:strokeWidth="4dp"
            app:layout_constraintTop_toTopOf="parent"
            android:animateLayoutChanges="true"
            android:layout_marginTop="40dp"
            >

            <LinearLayout
                android:id="@+id/linear_layout_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/report_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Отчёт"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_profile_fragment"
                    >
                </TextView>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/report_text_expandable_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="12sp"
                android:orientation="vertical"
                android:background="#474747"
                android:padding="@dimen/padding_profile_fragment"
                android:visibility="gone"
                android:animateLayoutChanges="true"
                >

                <TextView
                    android:id="@+id/report_text_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="150dp"
                    android:text="123"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_profile_fragment"
                    >
                </TextView>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>