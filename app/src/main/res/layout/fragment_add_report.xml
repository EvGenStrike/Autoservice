<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#474747"
    android:id="@+id/fragment_add_report"
    android:paddingStart="@dimen/padding_profile_fragment"
    android:paddingEnd="@dimen/padding_profile_fragment"
    android:paddingTop="@dimen/padding_profile_fragment"
    android:paddingBottom="@dimen/padding_profile_fragment"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/new_report"
        >
    </EditText>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="40dp"
        android:id="@+id/create_text_to_report_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Создать отчёт"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/new_report"
        android:background="@drawable/review_background"
        />



</androidx.constraintlayout.widget.ConstraintLayout>