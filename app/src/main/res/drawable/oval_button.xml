<!-- res/drawable/custom_button.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Левая часть кнопки с контуром и закругленными углами -->
    <item
        android:left="8dp"
        android:right="8dp"
        >
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:color="@color/light_yellow"
                android:width="3dp"
                />
            <corners
                android:topLeftRadius="@dimen/oval_button_corners"
                android:bottomLeftRadius="@dimen/oval_button_corners"
                android:topRightRadius="@dimen/oval_button_corners"
                android:bottomRightRadius="@dimen/oval_button_corners"
                />
            <size
                android:width="150dp"
                android:height="32dp"
                />
        </shape>
    </item>


</layer-list>
